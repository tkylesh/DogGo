@model DogGo.Models.ViewModels.WalkerProfileViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Walker Profile</h1>

<div>
    <hr />

    <section class="container">
        <img style="width:100px;float:left;margin-right:20px"
             src="@Model.Walker.ImageUrl" />
        <div>
            <label class="font-weight-bold">Name:</label>
            <span>@Model.Walker.Name</span>
        </div>
        <div>
            <label class="font-weight-bold">Neighborhood:</label>
            <span>@Model.Walker.Neighborhood.Name</span>
        </div>
    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>

    <div class="row">
        <section class="col-8 container mt-5">
            <h1>Recent Walks</h1>

            <table style="width: 75%; table-layout: fixed;">
                <tr>
                    <th>Date</th>
                    <th>Client</th>
                    <th>Duration</th>
                </tr>

                @foreach (Walks walk in Model.AllWalks)
                {
                    <tr>
                        <td>@walk.Date.ToShortDateString()</td>
                        <td>@walk.DogId</td>
                        <td>@walk.Duration</td>
                    </tr>
                }

            </table>
        </section>
        <section class="col-4 container mt-5">
            <h2>Total Walk Time: </h2>
        </section>
    </div>
</div>
